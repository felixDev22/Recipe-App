<div class='container'>
<div class="row">
<h2 class="text-center">Public Recipes</h2>
<% @recipes.each do |recipe|%>
<div class="">
<div class="m-3 bg-white public-card">
    <div class="card-body border rounded">
      <%= link_to recipe_path(recipe.id), class: 'text-decoration-none d-flex align-items-center justify-content-center' do %>
      <div class="d-flex flex-column w-50 text-center">
        <h5 class="card-title py-3 "><%= recipe.name %></h3>
        <p class="mb-0 py-3">By: <%= recipe.user.name %></p>
      </div>
          <div class="card-title d-flex w-50 flex-column ">
            <p class="py-3 mb-0">Total food items: <%= @recipe_ingredients.where(recipe: recipe).count %></p>
            <p class="py-3 mb-0">Total Price: $ <%= @recipe_ingredients.where(recipe: recipe).map {|value| value.food.price * value.quantity}.sum %></p>
          </div>
      <% end %>
    </div>
  </div>
  </div>
  <% end %>
  </div>
</div>